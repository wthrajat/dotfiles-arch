shell:
  program: /bin/bash

window:
  padding:
    x: 10
    y: 10
  opacity: 0.5

font:
  normal:
    family: MesloLGS NF
    style: Regular

  bold:
    family: MesloLGS NF

  italic:
    family: MesloLGS NF

  bold_italic:
    family: MesloLGS NF

  size: 11

colors:
  primary:
    background: '#000000'
    foreground: '#00ff00'

  # Normal colors
  normal:
    black: '#2e3436'
    red: '#cc0000'
    green: '#73d216'
    yellow: '#edd400'
    blue: '#3465a4'
    magenta: '#75507b'
    cyan: '#06989a'
    white: '#d3d7cf'

  # Bright colors
  bright:
    black: '#2e3436'
    red: '#ef2929'
    green: '#8ae234'
    yellow: '#fce94f'
    blue: '#729fcf'
    magenta: '#ad7fa8'
    cyan: '#34e2e2'
    white: '#eeeeec'

cursor:
  style: Beam
  thickness: 0.3
theme: Tango
